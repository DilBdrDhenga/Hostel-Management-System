@model StudentListViewModel

<div class="d-flex justify-content-between my-3">
    <h2>All Students List </h2>

    <a href="@Url.Action("AddStudent", "Student")" class="btn btn-primary mt-2">Add Student</a>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4">

    @foreach (var students in Model.Students)
    {
        <div class="col">
            <div class="card student-card">
                <img src="@students.ImageUrl" class="card-img-top img" alt="@students.Name">
                <div class="card-body student-button">

                    <div class="d-flex  flex-column justify-content-between mt-2">
                        <h2 class="text-start">
                            <a class="student-link text-decoration-none text-dark">@students.Name</a>

                        </h2>
                        <h4>@students.Details</h4>
                    </div>
                    <div class="d-flex justify-content-between">

                        <a href="@Url.Action("UpdateStudent", "Student", new { id = students.StudentId })" class="btn btn-primary mt-2">Edit Student</a>
                        <a href="@Url.Action("DeleteStudent", "Student", new { id = students.StudentId  })" class="btn btn-danger mt-2">Delete</a>
                    </div>

                </div>
            </div>

        </div>

    }
</div>