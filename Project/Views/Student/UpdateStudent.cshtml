@model UpdateStudentViewModel

<h2 class="my-4">Update students</h2>

<form asp-action="UpdateStudent" asp-controller="Student" method="post" enctype="multipart/form-data" class="needs-validation" novalidate="novalidate">
    @Html.AntiForgeryToken()
    <input asp-for="StudentId" type="hidden" />

    <div class="form-group mb-3 w-25">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Student Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" placeholder="ImageUrl" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Details" class="form-label"></label>
        <input asp-for="Details" class="form-control" placeholder="Details" />
    </div>

    <button type="submit" class="btn btn-primary">Update Button</button>
</form>